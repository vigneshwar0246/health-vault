# Example backend environment variables (copy to .env and fill values)
MONGODB_URI=mongodb://localhost:27017/healthhub
JWT_SECRET=your_jwt_secret_here
PORT=5000

# Vertex AI (Gemini) settings
GCP_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1
VERTEX_MODEL=chat-bison@001
# Either set GOOGLE_APPLICATION_CREDENTIALS to a local file path to service account JSON OR
# set GCP_SERVICE_ACCOUNT_JSON with the JSON content (not recommended for prod)
# GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json
# GCP_SERVICE_ACCOUNT_JSON='{"type":"service_account", ... }'

# Translation
# Prefer Google Translate API key for reliability, otherwise set a LibreTranslate URL
# GOOGLE_TRANSLATE_API_KEY=your_google_api_key
# LIBRETRANSLATE_URL=https://libretranslate.com
